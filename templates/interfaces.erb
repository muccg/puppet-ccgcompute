auto lo
iface lo inet loopback

# PUBLIC network
auto em1.3
iface em1.3 inet dhcp
  up ifconfig $IFACE promisc

# DMZ network
auto em1.4
iface em1.4 inet manual
  up ifconfig $IFACE 0.0.0.0 up
  up ifconfig $IFACE promisc

# REPLICATION network
auto em2
iface em2 inet dhcp

# MANAGEMENT network
auto em3
iface em3 inet dhcp
